<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.DashboardPage"
             Title="DashboardPage">
    
    <Grid RowDefinitions=".15*, .15*, .15*, .55*" BackgroundColor="White">
        <RoundRectangle Grid.RowSpan="2" StyleClass="TopRectangle" />
        <VerticalStackLayout StyleClass="Header">
            <Label StyleClass="HeaderTitle" Text="Good Morning" />
            <Label StyleClass="HeaderSubtitle" Text="John Doe" />
        </VerticalStackLayout>

        <Grid 
            Grid.Row="1"
            Grid.RowSpan="2"
            StyleClass="BalanceGrid"
        >
            <RoundRectangle StyleClass="BalanceRectangle" />

            <Grid
                ColumnDefinitions="*, *"
                RowDefinitions=".333*, .333*, .333*"
                StyleClass="Padding25"
            >
                <VerticalStackLayout>
                    <Label StyleClass="StrongSubTitle" Text="Total Balance" />
                    <Label StyleClass="StrongTitle" Text="$1,000.00" />
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Row="2">
                    <Label StyleClass="StrongSubTitle" Text="Income" />
                    <Label StyleClass="StrongTitle" Text="$1,234.00" />
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Row="2" Grid.Column="1">
                    <Label StyleClass="StrongSubTitle" Text="Expense" />
                    <Label StyleClass="StrongTitle" Text="$1,234.00" />
                </VerticalStackLayout>
            </Grid>
        </Grid>

        <Button Grid.Row="2" StyleClass="CircularButton" Text="+"/>

        <Grid
            Grid.Row="3"
            RowDefinitions=".1*, .9*"
            StyleClass="Margin15"
        >
            <Label Text="Transactions"/>
            <CollectionView Grid.Row="1" EmptyView="No Data">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout ItemSpacing="15" Orientation="Vertical"/>
                </CollectionView.ItemsLayout>
                <CollectionView.EmptyViewTemplate>
                    <DataTemplate>
                        <Grid>
                            <Label 
                                StyleClass="NoDataText"
                                Text="No Data Found"
                            />
                        </Grid>
                    </DataTemplate>
                </CollectionView.EmptyViewTemplate>

                <CollectionView.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Google</x:String>
                        <x:String>Apple</x:String>
                        <x:String>Facebook</x:String>
                        <x:String>Nvadia</x:String>
                        <x:String>Tesla</x:String>
                    </x:Array>
                </CollectionView.ItemsSource>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="*,*" RowDefinitions="*,*">
                            <Label StyleClass="StrongMediumTitle" Text="Transaction" />
                            <Label StyleClass="SmallFont"  Grid.Row="1" Text="Today"/>
                            <Label StyleClass="ListAmount" Grid.RowSpan="2" Grid.Column="1" Text="+ $550.00"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>


            </CollectionView>

        </Grid>

    </Grid>

</ContentPage>